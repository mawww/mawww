require github [[ user=cgdb tag=v${PV} ]]

HOMEPAGE="http://cgdb.github.io"
SUMMARY="the curses debugger"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        sys-libs/readline
        sys-libs/ncurses
    run:
        sys-devel/gdb
"

src_prepare()
{
    expatch "${FILES}"/ar_fix.patch
    edo ./autogen.sh
    default
}
